<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_create_quiz.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/create_quiz_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/create_quiz_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/label_quiz_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quiz Name:"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edit_quiz_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter quiz name"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/label_timer_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timer Duration (seconds):"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edit_timer_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter timer duration"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/button_add_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Question"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:id="@+id/questions_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <Button
            android:id="@+id/button_cancel_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />

        <Button
            android:id="@+id/button_submit_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Quiz"
            android:backgroundTint="@color/default_purple"
            android:textColor="@android:color/white"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
